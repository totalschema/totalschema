<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>distribution</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <!-- Include LICENSE from parent directory -->
        <fileSet>
            <directory>${project.parent.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>LICENSE*</include>
            </includes>
            <filtered>false</filtered>
        </fileSet>
        <!-- Include user manual -->
        <fileSet>
            <directory>${project.basedir}/user_manual</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <!-- Include shell scripts -->
        <fileSet>
            <directory>${project.basedir}/src/assembly/bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <!-- Include batch scripts -->
        <fileSet>
            <directory>${project.basedir}/src/assembly/bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>*.bat</include>
            </includes>
        </fileSet>
        <!-- Include User Libraries README -->
        <fileSet>
            <directory>${project.basedir}/src/assembly</directory>
            <outputDirectory>/user_libs</outputDirectory>
            <includes>
                <include>user-libs-README.md</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>

